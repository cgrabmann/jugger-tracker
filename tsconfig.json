{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "sourceMap": true,
    "strict": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "@juggerApi": [
        "./build/generated/openApi/ts"
      ]
    }
  },
  "include": [
    "./src/main/js/**/*.ts",
    "./typings.d.ts",
    "./build/generated/openApi/ts/**/*.ts"
  ]
}
